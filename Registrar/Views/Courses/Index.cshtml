@{
  Layout = "_Layout";
}

@using Registrar.Models

<h4>Courses</h4>

@if (@Model.Count == 0)
{
  <h5>No courses have been added yet</h5>
}

<ul>

@foreach (Course course in Model)
{
  <li>@Html.ActionLink($"{course.Name}", "Details", new { id = course.CourseId })</li>
}
</ul>

<p>@Html.ActionLink("Add new course", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
