@{
  Layout = "_Layout";
}

@model Registrar.Models.Student

<h4>Add a new Student</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {@required = "required"})

  @Html.LabelFor(model => model.Date)
  @Html.TextBoxFor(model => model.Date, new {@type = "date", @required = "required"})

  @Html.Label("Select Course")
  @Html.DropDownList("CourseId")

  <input type="submit" value="Add new Student" class="btn btn-primary">
}
<p>@Html.ActionLink("Show all Students", "Index")</p>