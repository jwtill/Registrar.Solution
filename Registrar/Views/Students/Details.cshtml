@{
  Layout ="_Layout";
}
@model Registrar.Models.Student

<h2>Student Details</h2>

<h3>@Html.DisplayNameFor(model => model.Name) : @Html.DisplayFor(model => model.Name)</h3>
<h3>@Html.DisplayNameFor(model => model.Date) : @Html.DisplayFor(model => model.Date)</h3>

@if (@Model.JoinEntities.Count == 0)
{
  <p>This student isn't in any courses</p>
}
else 
{
  <h4>Courses the student is in</h4>
  <ul>
    @foreach (var join in Model.JoinEntities)
    {
      <li>@join.Course.Name @join.Course.Number</li>
    }
  </ul>
}
<p>@Html.ActionLink("Add new course", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>